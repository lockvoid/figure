{
  "rules": {
    "users": {
      "$userId": {
        ".read": "$userId === auth.uid",
        ".write": "$userId === auth.uid",

        "email": {
          ".validate": "newData.isString()"
        },

        "apiKey": {
          ".validate": "newData.isString() && newData.val().length === 32"
        }
      }
    },

    "forms": {
      "$userId": {
        ".read": "$userId === auth.uid",
        ".write": "$userId === auth.uid",

        "$formId": {
          "name": {
            ".validate": "newData.isString() && newData.exists()"
          },

          "redirectTo": {
            ".validate": "newData.isString()"
          },

          "notifyMe": {
            ".validate": "newData.isBoolean()"
          },

          "userId": {
            ".validate": "newData.val() === auth.uid"
          }
        }
      }
    },

    "forms_users": {
      "$formId": {
        ".write": "root.child('forms').child(auth.uid).child($formId).exists()"
      }
    },

    "submissions": {
      "$formId": {
        ".read": "root.child('forms').child(auth.uid).child($formId).exists()",
        ".write": "root.child('forms').child(auth.uid).child($formId).exists()"
      }
    },

    "webhooks": {
      "$formId": {
        ".read": "root.child('forms').child(auth.uid).child($formId).exists()",
        ".write": "root.child('forms').child(auth.uid).child($formId).exists()"
      }
    }
  }
}
